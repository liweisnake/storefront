    <deployment>
        <parent-ref>storefront</parent-ref>
        <if-exists>keep</if-exists>
        <page>
            <page-name>DevLab</page-name>
            <supported-locale>fr</supported-locale>
            <supported-locale>en</supported-locale>
            <supported-locale>it</supported-locale>
            <supported-locale>ru</supported-locale>
            <supported-locale>zh</supported-locale>
            <resource-bundle>DevlabResource</resource-bundle>
            <properties>
                <property>
                    <name>order</name>
                    <value>3</value>
                </property>
            </properties>   
            <security-constraint>
                <policy-permission>
                    <role-name>User</role-name>
                    <action-name>view</action-name>
                    <action-name>viewrecursive</action-name>
                </policy-permission>
            </security-constraint>   
            <window>
                <window-name>News</window-name>
                <instance-ref>NewsPortletInstance</instance-ref>
                <region>left</region>
                <height>0</height>
                <properties>
                    <property>
                        <name>theme.decorationRendererId</name>
                        <value>divRenderer</value>
                    </property>
                    <property>
                        <name>theme.portletRendererId</name>
                        <value>divRenderer</value>
                    </property>
                </properties>
            </window>
            <window>
                <window-name>ServiceListWindow</window-name>
                <instance-ref>ServiceList</instance-ref>
                <region>center</region>
                <height>1</height>
            </window>
            <window>
                <window-name>Welcome</window-name>
                <content>
                    <content-type>cms</content-type>
                    <content-uri>/default/storefront/images/devlab.jpg</content-uri>
                </content>
                <region>center</region>
                <height>0</height>
            </window>
        </page>
    </deployment>
</deployments>
 