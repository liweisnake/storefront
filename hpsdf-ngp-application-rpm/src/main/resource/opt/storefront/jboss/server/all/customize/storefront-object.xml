<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE deployments PUBLIC
   "-//JBoss Portal//DTD Portal Object 2.6//EN"
   "http://www.jboss.org/portal/dtd/portal-object_2_6.dtd">
<deployments>
    <deployment>
        <parent-ref/>
        <if-exists>keep</if-exists>
        <portal>
            <portal-name>storefront</portal-name>
       	    <supported-mode>
                <mode>view</mode>
                <mode>edit</mode>
                <mode>help</mode>
            </supported-mode>
            <supported-window-states>
                <window-state>normal</window-state>
                <window-state>minimized</window-state>
                <window-state>maximized</window-state>
            </supported-window-states>
            <properties>
                <property>
                    <name>layout.id</name>
                    <value>generic</value>
                </property>
                <property>
                    <name>theme.renderSetId</name>
                    <value>divRenderer</value>
                </property>
                <property>
                    <name>theme.id</name>
                    <value>default</value>
                </property>
                <property>
                    <name>portal.defaultObjectName</name>
                    <value>Home</value>
                </property>
            </properties>
            <security-constraint>
                <policy-permission>
                    <unchecked/>
                    <action-name>view</action-name>
                    <action-name>personalize</action-name>
                </policy-permission>
                <policy-permission>
                    <role-name>User</role-name>
                    <action-name>view</action-name>
                </policy-permission>
                <policy-permission>
                    <role-name>Admin</role-name>
                    <action-name>personalizerecursive</action-name>
                    <action-name>viewrecursive</action-name>
                </policy-permission>
            </security-constraint>
        </portal>
    </deployment>
    
    <deployment>
        <parent-ref>storefront</parent-ref>
        <if-exists>keep</if-exists>
        <page>
            <page-name>Home</page-name>
            <supported-locale>fr</supported-locale>
            <supported-locale>en</supported-locale>
            <supported-locale>it</supported-locale>
            <supported-locale>ru</supported-locale>
            <supported-locale>zh</supported-locale>
            <resource-bundle>HomeResource</resource-bundle>
            <properties>
                <property>
                    <name>order</name>
                    <value>1</value>
                </property>
            </properties>
            <security-constraint>
                <policy-permission>
                    <action-name>viewrecursive</action-name>
                    <unchecked/>
                </policy-permission>
                <policy-permission>
                    <role-name>User</role-name>
                    <action-name>viewrecursive</action-name>
                </policy-permission>
            </security-constraint>
            <window>
                <window-name>News</window-name>
                <instance-ref>NewsPortletInstance2</instance-ref>
                <region>left</region>
                <height>2</height>
                <properties>
                    <property>
                        <name>theme.decorationRendererId</name>
                        <value>divRenderer</value>
                    </property>
                    <property>
                        <name>theme.portletRendererId</name>
                        <value>divRenderer</value>
                    </property>
                </properties>
            </window>
            <window>
                <window-name>RecommendedWindow</window-name>
                <instance-ref>Recommend</instance-ref>
                <region>center</region>
                <height>1</height>
            </window>
            <window>
                <window-name>TopWindow</window-name>
                <instance-ref>Top</instance-ref>
                <region>center</region>
                <height>2</height>
            </window>
            <window>
                <window-name>UserInfoWindow</window-name>
                <instance-ref>UserInfo</instance-ref>
                <region>left</region>
                <height>0</height>
            </window>
            <window>
                <window-name>Welcome</window-name>
                <content>
                    <content-type>cms</content-type>
                    <content-uri>/default/storefront/images/tutorial.jpg</content-uri>
                </content>
                <region>center</region>
                <height>0</height>
            </window>
        </page>
    </deployment>

    <deployment>
        <parent-ref>storefront</parent-ref>
        <if-exists>keep</if-exists>
        <page>
            <page-name>MyPortal</page-name>
            <supported-locale>fr</supported-locale>
            <supported-locale>en</supported-locale>
            <supported-locale>it</supported-locale>
            <supported-locale>ru</supported-locale>
            <supported-locale>zh</supported-locale>
            <resource-bundle>MyResource</resource-bundle> 
            <properties>
                <property>
                    <name>order</name>
                    <value>4</value>
                </property>
            </properties>  
            <security-constraint>
                <policy-permission>
                    <role-name>User</role-name>
                    <action-name>viewrecursive</action-name>
                </policy-permission>
            </security-constraint>      
            <window>
                <window-name>GoogleWeatherPortletWindow</window-name>
                <instance-ref>GoogleWeatherPortletInstance</instance-ref>
                <region>left</region>
                <height>0</height>
                <properties>
                    <property>
                        <name>theme.decorationRendererId</name>
                        <value>divRenderer</value>
                    </property>
                    <property>
                        <name>theme.portletRendererId</name>
                        <value>divRenderer</value>
                    </property>
                </properties>
            </window>
            <window>
                <window-name>MyPortalWindow</window-name>
                <instance-ref>MyPortal</instance-ref>
                <region>center</region>
                <height>1</height>
            </window>
            <window>
                <window-name>Welcome</window-name>
                <content>
                    <content-type>cms</content-type>
                    <content-uri>/default/storefront/images/myportal.jpg</content-uri>
                </content>
                <region>center</region>
                <height>0</height>
            </window>
        </page>
    </deployment>

   <deployment>
        <parent-ref>storefront</parent-ref>
