<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<AbsoluteLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content">

		<TextView android:id="@+id/detailCommentUser"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="user" android:layout_x="10px" android:layout_y="25px">
		</TextView>

		<TextView android:id="@+id/detailCommentDate"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="date" android:layout_x="140px" android:layout_y="25px">
		</TextView>


		<RatingBar android:id="@+id/detailCommentRate" style="?android:attr/ratingBarStyleSmall"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_x="225px" android:layout_y="25px">
		</RatingBar>

		<TextView android:id="@+id/detailCommentContent"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_x="10px" android:layout_y="50px">
		</TextView>

	</AbsoluteLayout>
</LinearLayout>

