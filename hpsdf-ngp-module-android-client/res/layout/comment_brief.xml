<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content">

	<AbsoluteLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content">

		<TextView android:id="@+id/commentUser"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_x="10px" android:layout_y="25px">
		</TextView>

		<TextView android:id="@+id/briefCommentDate"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_x="190px" android:layout_y="25px">
		</TextView>

		<TextView android:id="@+id/briefCommentContent"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_x="10px" android:layout_y="60px">
		</TextView>

	</AbsoluteLayout>

</LinearLayout>
