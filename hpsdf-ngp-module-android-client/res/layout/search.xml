<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/screen" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical" android:layout_width="fill_parent"
		android:layout_height="wrap_content">

		<LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent" android:layout_height="wrap_content">

			<AutoCompleteTextView android:id="@+id/searchText"
				android:layout_width="270px" android:layout_height="wrap_content" />

			<ImageButton android:id="@+id/searchBtn"
				android:layout_width="48dip" android:layout_height="48dip"
				android:src="@drawable/search_clicked" />

		</LinearLayout>

		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
			<Button android:id="@+id/previousSearchBtn" style="?android:attr/buttonStyleSmall"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="Previous" android:layout_x="10px" android:layout_y="30px">
			</Button>
			<Button android:id="@+id/nextSearchBtn" style="?android:attr/buttonStyleSmall"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="Next" android:layout_x="50px" android:layout_y="30px">
			</Button>

			<TextView android:id="@+id/pagingDetail"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_x="120px" android:layout_y="30px">
			</TextView>
		</LinearLayout>

		<ListView android:id="@+id/searchResultList"
			android:layout_width="350px" android:layout_height="350px">
		</ListView>

	</LinearLayout>

</ScrollView>